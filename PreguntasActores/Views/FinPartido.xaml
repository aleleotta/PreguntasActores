<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PreguntasActores.Views.FinPartido"
             xmlns:vm="clr-namespace:PreguntasActores.ViewModels"
             x:DataType="vm:MainVM"
             Title="FinPartido">

    <ContentPage.BindingContext>
        <vm:MainVM/>
    </ContentPage.BindingContext>

    <StackLayout HorizontalOptions="Center" Padding="20" Spacing="20">
        <StackLayout Spacing="5" VerticalOptions="Start">
            <HorizontalStackLayout>
                <Label Text="Aciertos:" Margin="10" VerticalOptions="Center"/>
                <Label Text="{Binding Aciertos}" VerticalOptions="Center"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Equivocados:" Margin="10" VerticalOptions="Center"/>
                <Label Text="{Binding Equivocados}" VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </StackLayout>
        <Label Text="Quieres intentarlo de nuevo?" Margin="0,0,0,10"/>
        <StackLayout Spacing="50" VerticalOptions="End">
            <Button Text="Jugar" FontSize="Large" FontAttributes="Bold" WidthRequest="150" Command="{Binding Jugar}"/>
            <Button Text="Salir" FontSize="Large" FontAttributes="Bold" WidthRequest="150" Command="{Binding Salir}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>